<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Example CheckBoxPreference -->
    <CheckBoxPreference
        android:key="example_checkbox"
        android:title="Enable Feature"
        android:summary="Enable or disable a feature"
        android:defaultValue="true" />

    <!-- Example EditTextPreference -->
    <EditTextPreference
        android:key="example_edittext"
        android:title="Username"
        android:summary="Enter your username"
        android:defaultValue=""
        android:inputType="text" />

    <!-- Example ListPreference -->
    <ListPreference
        android:key="example_list"
        android:title="Choose Option"
        android:summary="Select an option from the list"
        android:defaultValue="option1"
        android:entries="@array/option_entries"
        android:entryValues="@array/option_values" />

</PreferenceScreen>
